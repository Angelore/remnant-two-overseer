<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svc="using:RemnantOverseer.Services"
             xmlns:vm="using:RemnantOverseer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RemnantOverseer.Views.SettingsView"
             x:DataType="vm:SettingsViewModel"
             svc:FileDialogManager.Register="{Binding}">

  <Grid RowDefinitions="Auto, Auto, Auto *">
    <Border Grid.Row="0" Margin="20 20 20 10">
      <Grid RowDefinitions="Auto, Auto">
        <TextBlock Grid.Row="0" Text="Save file location" FontWeight="DemiBold" FontSize="16" Margin="5"/>
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
          <Border Grid.Column="0" BorderThickness="2" CornerRadius="3" BorderBrush="{StaticResource OuterBorderInactiveBrush}" Padding="10 0">
            <TextBlock Height="16" Text="{Binding FilePath}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center"/>
          </Border>
          <Button Grid.Column="1" Command="{Binding SelectSaveFileCommand}" Margin="5 0 0 0">
            <PathIcon Height="20" Width="20" Foreground="{StaticResource BaseTextColor}"
                    Data="{StaticResource FolderOpenIcon}"/>
          </Button>
        </Grid>
      </Grid>
    </Border>
    <Separator Grid.Row="1" BorderBrush="AliceBlue" Background="{StaticResource OuterBorderInactiveColor}" Height="2"/>
    <Border Grid.Row="2" Margin="20 10">
      <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto">
        <TextBlock Grid.Row="0" Text="Backups location" FontWeight="DemiBold" FontSize="16" Margin="5"/>
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
          <Border Grid.Column="0" BorderThickness="2" CornerRadius="3" BorderBrush="{StaticResource OuterBorderInactiveBrush}" Padding="10 0">
            <TextBlock Height="16" Text="{Binding BackupsPath}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center"/>
          </Border>
          <Button Grid.Column="1" Command="{Binding SelectBackupFolderCommand}" Margin="5 0 0 0">
            <PathIcon Height="20" Width="20" Foreground="{StaticResource BaseTextColor}"
                    Data="{StaticResource FolderOpenIcon}"/>
          </Button>
        </Grid>
        <Grid Grid.Row="2" ColumnDefinitions="Auto" Margin="0 10">
          <CheckBox Grid.Column="0" IsChecked="{Binding IsRollingBackupsEnabled}" Command="{Binding RollingBackupsEnabledCommand}">Enable rolling saves</CheckBox>
        </Grid>
        <Grid Grid.Row="3" ColumnDefinitions="Auto, Auto, *" Margin="0 10" IsEnabled="{Binding IsRollingBackupsEnabled}">
          <ButtonSpinner Name="AmountOfRollingBackupsSpinner" Grid.Column="0" BorderBrush="{StaticResource InnerBorderColor}" Width="115"
                         Content="{Binding AmountOfRollingBackups}"
                         Spin="AmountOfRollingBackupsSpinner_Spin"/>
          <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="15 0 0 0">Amount of rolling saves</TextBlock>
        </Grid>
        <Grid Grid.Row="4" ColumnDefinitions="Auto, Auto, *" Margin="0 10" IsEnabled="{Binding IsRollingBackupsEnabled}">
          <ButtonSpinner Name="MinutesBetweenRollingBackupsSpinner" Grid.Column="0" BorderBrush="{StaticResource InnerBorderColor}" Width="115"
                         Content="{Binding MinutesBetweenRollingBackups}"
                         Spin="MinutesBetweenRollingBackupsSpinner_Spin"/>
          <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="15 0 0 0">Time between rolling saves (minutes)</TextBlock>
        </Grid>
      </Grid>
    </Border>
  </Grid>

</UserControl>
